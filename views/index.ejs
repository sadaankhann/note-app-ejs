<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="\create" method="post">
                <input class="block w-full rounded-md px-5 py-2 bg-zinc-600" type="text" name="title" id=""
                    placeholder="Title Goes Here">
                <textarea name="details" id="" class="block w-full outline-none rounded-md mt-2 px-5 py-2 bg-zinc-600"
                    placeholder="Write Your Task Details text-white"></textarea>
                <input class="mt-3 p-2 pl-4 pr-5 bg-blue-400 outline-none text-white" type="submit" value="Create Task">
            </form>
            <div class="tasks mt-5">
            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="relative task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <a href='\Files\delete\<%=val%>\'><img src="/images/trash.png" class="absolute right-2 h-[30px] w-[30px]" alt=""/></a>
                        <h3 class="text-2xl text-white tracking-tighter"><%= val %></h3>
                        <a class="text-blue-500 inline-block mt-3" href='\Files\<%= val%>'>Read More</a>
                    </div>
            <% }) %>
            <% }  else { %>
                <h3 class="text-zinc-600">No Tasks Found</h3>
            <% } %>
        </div>
        </div>

    </div>
    <script src="../javascripts/javaS.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

</body>

</html>